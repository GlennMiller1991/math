{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist/bin",
		"declarationDir": "./dist/types",
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"node_modules",
		"__tests__"
	]
}